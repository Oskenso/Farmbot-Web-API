sudo add-apt-repository ppa:brightbox/ruby-ng
sudo apt-get update
sudo apt-get install ruby rake ruby-bundler ruby-dev libmysqlclient-dev
	libpq-dev libsqlite3-dev

change gemfile to match your ruby version

sudo gem install bundler
sudo gem install bcrypt -v '3.1.11'
sudo gem install mysql -v '2.9.1'
sudo gem install pg -v '0.19.0'
sudo gem install sqlite3 -v '1.3.12'

npm install
bundle install
